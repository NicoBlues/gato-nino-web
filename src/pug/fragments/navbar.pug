            <div class="flex items-center ml-auto">
            include sidebar.pug
            <h3 id="menu-texto" class="text-white mr-4 mt-1 hidden md:inline">Menu</h3>
            <button id="boton-sidebar" class="text-black bg-teal-700 hover:bg-teal-800 focus:ring-4 focus:ring-teal-300 font-medium rounded-xl text-sm px-3 py-1.5 dark:bg-teal-600 dark:hover:bg-teal-700 focus:outline-none dark:focus:ring-teal-800 justify-self-start" type="button" data-drawer-target="drawer-navigation" data-drawer-show="drawer-navigation" aria-controls="drawer-navigation">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
