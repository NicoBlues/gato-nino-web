script.
  document.addEventListener("DOMContentLoaded", function() {
      var navBar = document.getElementById("navbar");
      var botonSidebar = document.getElementById("boton-sidebar");
      var textoNino = document.getElementById("texto-nino");
      var menuTexto = document.getElementById("menu-texto");

      window.addEventListener("scroll", function(){
          var scrollPosY = window.scrollY;
          if(scrollPosY > 0) {
              navBar.classList.remove("dark:bg-zinc-950");
              navBar.classList.add("bg-gradient-to-r", "from-cyan-500", "to-blue-500");
              navBar.classList.add("flex");
              botonSidebar.classList.add("hidden");
              menuTexto.classList.remove("md:inline");
          } else {
              navBar.classList.remove("bg-gradient-to-r", "from-cyan-500", "to-blue-500");
              navBar.classList.add("dark:bg-zinc-950");
              navBar.classList.remove("flex");
              botonSidebar.classList.remove("hidden");
              menuTexto.classList.add("md:inline");
          }
      });
  });
